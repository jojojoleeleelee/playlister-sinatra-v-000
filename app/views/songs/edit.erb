<h1>Edit <%= @song.name%>:</h1>
<form action="/songs/<%=@song.slug%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<h2>Name: <input type="text" name="song[name]" value="<%=  @song.name%>"></h2>
<h3>Artist:<input type="text" name="artist[name]" value="<%= @song.artist.name %>"></h3>

<h3>Genre:   </h3>
<p> <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %> </input>
  <% end %>
</p>
  <input type="submit" value="edit">
</form>
